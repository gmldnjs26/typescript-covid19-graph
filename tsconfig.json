{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES5",
    "module": "ES2015",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "allowJs": true,
    "noImplicitAny": true,
    "outDir": "./built",
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],  
      "@/*": [
        "./*"
      ]
    },
    "strict": true, // strict에 관한 옵션들은 true가 된다.
  },
  "include": ["./src/**/*"]
}